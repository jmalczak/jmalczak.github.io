require_relative "_deployment/include/util.rb"
require_relative "_deployment/include/post.rb"

namespace :env do
  desc 'Sets the configuration for development mode.'
  task :dev do
    edit_config 'url', 'http://localhost:4000'
  end

  desc 'Sets the configuration for production mode.'
  task :pro do
    edit_config 'url', 'http://malczak.net'
  end
end 